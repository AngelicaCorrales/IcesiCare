<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Â¡Hola!"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bienvenido"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/makeAppmBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="64dp"
        android:drawableTop="@drawable/pencil"
        android:text="Pedir cita"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/eventsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/eventsBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:drawableTop="@drawable/ticket"
        android:text="Eventos"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/makeAppmBtn"
        app:layout_constraintEnd_toStartOf="@+id/activitiesBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/makeAppmBtn"
        app:layout_constraintTop_toTopOf="@+id/makeAppmBtn" />

    <Button
        android:id="@+id/activitiesBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:drawableTop="@drawable/basketball"
        android:text="Actividades"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/eventsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eventsBtn"
        app:layout_constraintTop_toTopOf="@+id/eventsBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>