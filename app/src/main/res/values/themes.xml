<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IcesiCare" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:datePickerDialogTheme">@style/MyPickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyPickerTheme</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>
    </style>

    <style name="Theme.IcesiCare" parent="Base.Theme.IcesiCare" />

    <style name="ThemeOverlay.IcesiCare.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    
    <style name="Theme.IcesiCare.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_purple</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/vector_icesi_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.IcesiCare</item>
    </style>



</resources>